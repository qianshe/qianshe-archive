{
  "name": "qianshe-archive",
  "version": "1.0.0",
  "description": "谦舍个人博客与作品集系统 - Monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:frontends": "npm run build -w packages/dashboard-frontend -w packages/portfolio-frontend",
    "build:portfolio": "npm run build -w packages/portfolio-frontend",
    "build:dashboard": "npm run build -w packages/dashboard-frontend",
    "dev:portfolio": "npm run dev -w packages/portfolio-worker",
    "dev:dashboard": "npm run dev -w packages/dashboard-worker",
    "deploy": "node deploy.js",
    "deploy:portfolio": "cd packages/portfolio-worker && npx wrangler deploy --env production",
    "deploy:dashboard": "cd packages/dashboard-worker && npx wrangler deploy --env production",
    "deploy:all": "npm run deploy:portfolio && npm run deploy:dashboard",
    "init:db": "cd database && node init-db.js",
    "migrate": "cd database && npx wrangler d1 execute qianshe-db --file=migrations/001_initial_data.sql",
    "logs:portfolio": "cd packages/portfolio-worker && npx wrangler tail",
    "logs:dashboard": "cd packages/dashboard-worker && npx wrangler tail",
    "clean": "npm run clean --workspaces --if-present",
    "setup": "npm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:all": "npm run lint && npm run format:check",
    "type-check": "npm run type-check --workspaces --if-present",
    "quality-check": "npm run lint:all && npm run build:frontends"
  },
  "keywords": [
    "blog",
    "portfolio",
    "cloudflare-workers",
    "d1",
    "react",
    "typescript"
  ],
  "author": "qainshe",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "better-sqlite3": "^12.4.1",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "prettier": "^3.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "wrangler": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
