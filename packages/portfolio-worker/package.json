{
  "name": "portfolio-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for portfolio public API and static hosting",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8787 --local -c wrangler.local.toml",
    "build": "tsc",
    "build:frontend": "cd ../frontend && npm run build",
    "deploy": "npm run build:frontend && wrangler deploy",
    "deploy:dev": "npm run build:frontend && wrangler deploy --env development",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf static dist"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250110.0",
    "@hono/node-server": "^1.12.0",
    "dompurify": "^3.2.3",
    "hono": "^4.7.10",
    "marked": "^15.0.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.42.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
