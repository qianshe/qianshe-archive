{
  "name": "dashboard-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for personal blog backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8788 --local -c wrangler.local.toml",
    "build": "tsc",
    "build:frontend": "cd ../frontend && npm run build",
    "deploy": "npm run build:frontend && wrangler deploy",
    "deploy:staging": "npm run build:frontend && wrangler deploy --env staging",
    "deploy:dev": "npm run build:frontend && wrangler deploy --env development",
    "db:migrate": "wrangler d1 migrations apply qianshe-db",
    "db:migrate:local": "wrangler d1 migrations apply qianshe-db --local",
    "db:seed": "node scripts/seed.js",
    "db:seed:local": "node scripts/seed-local.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf static dist"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20250110.0",
    "bcryptjs": "^2.4.3",
    "dompurify": "^3.2.3",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/marked": "^6.0.0",
    "typescript": "^5.7.3",
    "wrangler": "^4.42.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
